# RL Player Environment Configuration
# Copy this file to .env and customize your values
# DO NOT commit .env to Git - it's automatically ignored for security

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Your password hash (generate with: await hashString("your-password") in browser console)
VITE_PASSWORD_HASH=your-password-hash-here

# =============================================================================
# RADIO STATION CONFIGURATION  
# =============================================================================

# Basic station information
VITE_STATION_NAME=Your Radio Name
VITE_STREAM_URL=https://your-stream-url.com
VITE_APP_URL=https://your-domain.com/app/

# =============================================================================
# APPEARANCE SETTINGS
# =============================================================================

# Colors (hex format)
VITE_THEME_COLOR=#031521
VITE_BACKGROUND_COLOR=#031521

# PWA Settings
VITE_SCOPE=/

# =============================================================================
# AUDIO SETTINGS
# =============================================================================

# Volume settings (0-100)
VITE_DEFAULT_VOLUME=100
VITE_DIM_VOLUME_SLEEP_TIMER=50

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Set to true for additional console logging
VITE_DEBUG_MODE=false

# API endpoints
VITE_PLAYLIST_ENDPOINT=playlist.json
