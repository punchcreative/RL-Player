{
  "manifest_version": 3,
  "name": "RL Player",
  "short_name": "KVPN",
  "description": "Player for a stream with playlist data from Radiologik",
  "version": "1.0.1",
  "author": "Erik Kroon",
  "permissions": ["storage", "activeTab", "scripting", "webRequest"],
  "start_url": "https://eajt.nl/kvpn/",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon-16.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "scope": "./",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#282828",
  "theme_color": "#0071BC",
  "icons": [
    {
      "src": "img/cover.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ]
}
