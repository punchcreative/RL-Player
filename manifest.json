{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "manifest_version": 3,
  "name": "KVPN RL Player",
  "short_name": "KVPN",
  "description": "Player for icecast with playlist data from Radiologik",
  "version": "1.1.4",
  "version_name": "stable 1.1.4",
  "lang": "en-US",
  "author": "K zelf",
  "scope": "/kvpn/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#031521",
  "theme_color": "#031521",
  "permissions": ["storage", "activeTab", "scripting", "webRequest"],
  "start_url": "/kvpn/",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/cover.png",
      "48": "img/cover.png",
      "128": "img/cover.png"
    }
  },
  "icons": [
    {
      "src": "img/app-icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ]
}
