{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "manifest_version": 3,
  "name": "RL Player",
  "description": "Player for icecast stream with support for playlist data from Radiologik",
  "version": "1.4.0",
  "lang": "en-US",
  "author": "PNCH",
  "scope": "/kvpn/",
  "custom_radio_config": {
    "station_name": "KVPN",
    "stream_url": "https://k-one.pvpjamz.com",
    "default_volume": 100,
    "dim_volume_sleep_timer": 50,
    "theme_color": "#031521"
  },
  "api_endpoints": {
    "app_url": "https://eajt.nl/kvpn/",
    "playlist": "playlist.json",
    "metadata": "https://api.example.com/now-playing"
  },
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#031521",
  "theme_color": "#031521",
  "icons": [
    {
      "src": "img/app-icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ]
}
