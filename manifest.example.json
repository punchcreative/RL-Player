{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "manifest_version": 3,
  "name": "RL Player",
  "description": "Player for icecast stream with support for playlist data from Radiologik",
  "version": "1.4.2",
  "lang": "en-US",
  "author": "PNCH",
  "scope": "/your-app-path/",
  "background_color": "#031521",
  "theme_color": "#031521",
  "custom_radio_config": {
    "station_name": "Your Radio Name",
    "stream_url": "https://your-stream-url.com",
    "default_volume": 100,
    "dim_volume_sleep_timer": 50,
    "theme_color": "#031521",
    "app_url": "https://your-domain.com/app/"
  },
  "api_endpoints": {
    "playlist": "playlist.json"
  },
  "display": "standalone",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "img/app-icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ]
}
